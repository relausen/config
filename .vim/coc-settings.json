// See https://issueexplorer.com/issue/neoclide/coc.nvim/3492#26992960 for
// making JSON completion work, at least until
// https://github.com/microsoft/vscode-json-languageservice/issues/120 is fixed
{
    "rust-analyzer.debug.vimspector.configuration.name": "launch",
    "rust-analyzer.debug.runtime": "vimspector",
    "rust-analyzer.trace.server": "verbose",
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": ["serve"],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {
                "experimentalFeatures": {
                    "prefillRequiredFields": true,
                    "validateOnSave": true
                }
            },
            "settings": {}
        }
    }
}
